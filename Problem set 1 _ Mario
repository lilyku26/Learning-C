#include <cs50.h>
#include <stdio.h>
//by ide.cs50.io
//Problem set 1

int main(void)
{
    int n;
    do
    {
        n = get_int("Height:");
    }
    while (n<1);

  for(int i=0; i<n; i++)
  {

      for(int j=0; j<(n-i-1);j++)
      {
          printf(" ");
      }
      for(int k=0; k<=i; k++)
      {
          printf("#");
      }
      printf(" ");
      for(int h=0; h<=i; h++)
      {
          printf("#");
      }

      printf("\n");
  }
}


//This is how it looks like
//Height:4
//   # #
//  ## ##
// ### ###
//#### ####
